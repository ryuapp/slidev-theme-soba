{
  "name": "slidev-theme-soba",
  "version": "0.2.0",
  "description": "A simple Slidev theme for Japanese",
  "author": {
    "name": "ryu",
    "url": "https://www.ryu.app"
  },
  "keywords": [
    "slidev-theme",
    "slidev"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryuapp/slidev-theme-soba.git"
  },
  "homepage": "https://slidev-theme-soba.ryu.app/",
  "bugs": "https://github.com/ryuapp/slidev-theme-soba/issues",
  "slidev": {
    "colorSchema": "light",
    "highlighter": "prism",
    "defaults": {
      "fonts": {
        "sans": [
          "Poppins",
          "Noto Sans JP"
        ],
        "serif": "Roboto Slab",
        "mono": "Fira Code",
        "weights": [
          200,
          400,
          500,
          700
        ]
      },
      "hightlighter": "prism"
    }
  },
  "engines": {
    "node": ">=14.0.0",
    "slidev": ">=0.19.3"
  },
  "scripts": {
    "build": "slidev build example.md",
    "dev": "slidev example.md --open",
    "export": "slidev export example.md",
    "screenshot": "slidev export example.md --format png"
  },
  "dependencies": {
    "@slidev/types": "^0.43.15",
    "codemirror-theme-vars": "^0.1.2",
    "prism-theme-vars": "^0.2.4",
    "theme-vitesse": "^0.7.3"
  },
  "devDependencies": {
    "@slidev/cli": "^0.43.15",
    "playwright-chromium": "^1.39.0"
  },
  "license": "MIT"
}
